{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@southem/ui/*": [
        "./packages/ui",
        "./packages/ui/src/*"
      ],
      "@southem/theme/*": [
        "./packages/theme",
        "./packages/theme/src/*"
      ],
      "@southem/animation/*": [
        "./packages/animation",
        "./packages/animation/src/*"
      ],
      "@pg/*": [
        "./packages/showcases/*"
      ]
    }
  },
  "include": [
    "./packages",
    "./packages/**/package.json"
  ],
  "exclude": [
    "./template/javascript",
    "./template/typescript",
    "./packages/showcases",
    "./**/*.spec.ts",
    "./**/*.spec.tsx",
    "./**/*.snap"
  ]
}
