{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@southem/animation/*": [
        "./packages/animation",
        "./packages/animation/src/*"
      ],
      "@southem/fonts/*": [
        "./packages/fonts",
        "./packages/fonts/src/*"
      ],
      "@southem/html/*": [
        "./packages/html",
        "./packages/html/src/*"
      ],
      "@southem/icons/*": [
        "./packages/icons",
        "./packages/icons/src/*"
      ],
      "@southem/theme/*": [
        "./packages/theme",
        "./packages/theme/src/*"
      ],
      "@southem/tools/*": [
        "./packages/tools",
        "./packages/tools/src/*"
      ],
      "@southem/ui/*": [
        "./packages/ui",
        "./packages/ui/src/*"
      ],

      "@pg/*": [
        "./packages/showcases/*"
      ]
    }
  },
  "include": [
    "./packages",
    "./packages/**/package.json"
  ],
  "exclude": [
    "./packages/template/javascript",
    "./packages/template/typescript",
    "./packages/showcases",
    "./**/*.spec.ts",
    "./**/*.spec.tsx",
    "./**/*.snap"
  ]
}
